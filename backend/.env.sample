# System Builder Hub Environment Configuration

# Flask Configuration
FLASK_ENV=development
SBH_PORT=5001

# Database Configuration
ENV=development
DATABASE_URL=sqlite:///./instance/app.db
DATABASE_URL_PROD=postgresql+psycopg2://USER:PASSWORD@HOST:5432/DBNAME
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# LLM Configuration
LLM_SECRET_KEY=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
FEATURE_LLM_API=true

# CORS Configuration
CORS_ORIGINS=http://localhost:5001

# Optional Configuration
SENTRY_DSN=
LOG_LEVEL=INFO
PUBLIC_BASE_URL=http://localhost:5001
AUTH_SECRET_KEY=your-secret-key-here-change-in-production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STORAGE_PROVIDER=local
S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_PRESIGN_EXPIRY_SECONDS=900

# Redis / ElastiCache
REDIS_URL=redis://localhost:6379/0
REDIS_QUEUE_URL=${REDIS_URL}
SESSION_TYPE=redis
SESSION_REDIS_URL=${REDIS_URL}
RATE_LIMIT_STORAGE_URL=${REDIS_URL}

# Feature flags
FEATURE_REDIS=true
FEATURE_RATE_LIMITS=true
FEATURE_BG_JOBS=true

# Observability
ENV=development
LOG_LEVEL=INFO                # DEBUG|INFO|WARNING|ERROR
LOG_JSON=true                 # JSON logs to stdout
REQUEST_ID_HEADER=X-Request-Id
SENTRY_DSN=
SENTRY_ENVIRONMENT=
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=sbh
PROMETHEUS_METRICS_ENABLED=true

# Alerts (simple)
ALERT_THRESHOLD_READINESS_5XX=3

# SBH Environment Variables - Phase 1 Cloud Migration
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development with Docker Compose
DATABASE_URL=postgresql://sbh_user:sbh_pass@postgres:5432/sbh_db

# For local development with SQLite (fallback)
# DATABASE_URL=sqlite:///./db/sbh.db

# For production (replace with your actual RDS endpoint)
# DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/sbh_db

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# AWS CONFIGURATION (Phase 2)
# =============================================================================
AWS_REGION=us-east-1
AWS_BUCKET_NAME=sbh-workspace

# AWS Credentials (for local development)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Redis (for future caching/session storage)
# REDIS_URL=redis://redis:6379/0

# Sentry (for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Prometheus (for metrics)
# PROMETHEUS_ENABLED=true

option_settings:
  # Worker environment configuration
  aws:elasticbeanstalk:application:environment:
    ENV: production
    FLASK_ENV: production
    FEATURE_BG_JOBS: 'true'
    FEATURE_REDIS: 'true'
    FEATURE_RATE_LIMITS: 'false'  # Workers don't need rate limiting
    LOG_JSON: 'true'
    LOG_LEVEL: INFO
    PROMETHEUS_METRICS_ENABLED: 'false'  # Workers don't need metrics endpoint
    
    # Redis configuration
    REDIS_URL: 'redis://REPLACE_ELASTICACHE_ENDPOINT:6379/0'
    REDIS_QUEUE_URL: 'redis://REPLACE_ELASTICACHE_ENDPOINT:6379/3'
    
    # Database configuration
    DATABASE_URL_PROD: 'postgresql+psycopg2://REPLACE_USER:REPLACE_PASS@REPLACE_HOST:5432/REPLACE_DB'
    DB_POOL_SIZE: '5'
    DB_MAX_OVERFLOW: '5'
    DB_POOL_TIMEOUT: '30'
    DB_POOL_RECYCLE: '1800'
    
    # Secrets (will be loaded from SSM)
    AUTH_SECRET_KEY: REPLACE_WITH_SECRET_KEY
    LLM_SECRET_KEY: REPLACE_WITH_LLM_SECRET_KEY
    
    # SSM configuration
    SSM_PATH: '/sbh/prod/'

option_settings:
  # Enhanced health check configuration
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
    HealthCheckType: ELB
    HealthCheckURL: /readiness
  
  # Ignore 4xx errors on known endpoints
  aws:elasticbeanstalk:healthreporting:system:
    IgnoreHealthCheck: true
    IgnoreHealthCheckURL: /metrics
    IgnoreHealthCheckURL: /healthz
    IgnoreHealthCheckURL: /api/audit/recent
  
  # Health check thresholds
  aws:elasticbeanstalk:healthreporting:system:
    HealthCheckTimeout: 5
    HealthyThresholdCount: 3
    UnhealthyThresholdCount: 5

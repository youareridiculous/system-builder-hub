option_settings:
  # Autoscaling configuration
  aws:autoscaling:asg:
    MinSize: 2
    MaxSize: 6
  
  # Target tracking scaling policy
  aws:autoscaling:trigger:
    BreachDuration: 5
    LowerBreachScaleIncrement: -1
    LowerThreshold: 30
    MeasureName: CPUUtilization
    Period: 5
    UpperBreachScaleIncrement: 1
    UpperThreshold: 50
  
  # Scale up/down cooldown
  aws:autoscaling:asg:
    ScaleUpCooldown: 120
    ScaleDownCooldown: 120
  
  # Health check configuration
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
    HealthCheckType: ELB
    HealthCheckURL: /readiness
  
  # Enhanced health check settings
  aws:elasticbeanstalk:healthreporting:system:
    IgnoreHealthCheck: true
    IgnoreHealthCheckURL: /metrics
    IgnoreHealthCheckURL: /healthz

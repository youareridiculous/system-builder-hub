option_settings:
  # Worker autoscaling configuration
  aws:autoscaling:asg:
    MinSize: 1
    MaxSize: 4
  
  # Target tracking scaling policy for workers
  aws:autoscaling:trigger:
    BreachDuration: 5
    LowerBreachScaleIncrement: -1
    LowerThreshold: 20
    MeasureName: CPUUtilization
    Period: 5
    UpperBreachScaleIncrement: 1
    UpperThreshold: 60
  
  # Scale up/down cooldown
  aws:autoscaling:asg:
    ScaleUpCooldown: 120
    ScaleDownCooldown: 120
  
  # Health check configuration (workers don't serve HTTP)
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: basic

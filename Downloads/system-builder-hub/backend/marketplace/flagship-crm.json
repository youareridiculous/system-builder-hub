  "guided_prompts": {
    "onboarding": {
      "title": "Welcome to SBH CRM",
      "description": "Let's get you set up with your new CRM system",
      "steps": [
        {
          "id": "company_setup",
          "title": "Company Information",
          "description": "Tell us about your company",
          "fields": [
            {"name": "company_name", "type": "text", "required": true},
            {"name": "industry", "type": "select", "options": ["Technology", "Finance", "Healthcare", "Other"]},
            {"name": "team_size", "type": "number", "required": true}
          ]
        },
        {
          "id": "team_invite",
          "title": "Invite Your Team",
          "description": "Add team members to your CRM",
          "fields": [
            {"name": "emails", "type": "email_list", "required": false}
          ]
        },
        {
          "id": "import_data",
          "title": "Import Your Data",
          "description": "Import contacts and deals from your existing system",
          "fields": [
            {"name": "import_type", "type": "select", "options": ["CSV", "Salesforce", "HubSpot", "None"]},
            {"name": "import_file", "type": "file", "required": false}
          ]
        }
      ]
    },
    "first_contact": {
      "title": "Add Your First Contact",
      "description": "Create your first contact in the CRM",
      "fields": [
        {"name": "first_name", "type": "text", "required": true},
        {"name": "last_name", "type": "text", "required": true},
        {"name": "email", "type": "email", "required": true},
        {"name": "company", "type": "text", "required": false},
        {"name": "phone", "type": "tel", "required": false}
      ]
    },
    "first_deal": {
      "title": "Create Your First Deal",
      "description": "Set up your first deal in the pipeline",
      "fields": [
        {"name": "title", "type": "text", "required": true},
        {"name": "value", "type": "number", "required": true},
        {"name": "contact_id", "type": "contact_picker", "required": true},
        {"name": "pipeline_stage", "type": "select", "options": ["qualification", "proposal", "negotiation"]}
      ]
    }
  },

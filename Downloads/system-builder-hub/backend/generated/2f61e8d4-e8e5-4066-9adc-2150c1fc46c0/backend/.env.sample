COMM_PROVIDERS_SMS=mock
COMM_PROVIDERS_VOICE=mock
COMM_PROVIDERS_CALL_RECORD=false

# SendGrid Configuration (for email)
SENDGRID_API_KEY=your_sendgrid_api_key_here

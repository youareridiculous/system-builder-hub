{
  "dashboard": {
    "id": null,
    "title": "Meta-Builder v3 Auto-Fix Dashboard",
    "tags": ["meta-builder", "auto-fix", "v3"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Auto-Fix Attempts by Signal Type",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(autofix_attempts_total) by (signal_type)",
            "legendFormat": "{{signal_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Auto-Fix Success Ratio",
        "type": "gauge",
        "targets": [
          {
            "expr": "autofix_success_ratio",
            "legendFormat": "Success Ratio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 0.8}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Backoff Delay Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "rate(autofix_backoff_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Re-Plans Triggered",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(autofix_replans_total[1h])",
            "legendFormat": "Re-Plans (1h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Approval Requests",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(approval_requests_total{status=\"pending\"}[5m])",
            "legendFormat": "Pending"
          },
          {
            "expr": "increase(approval_requests_total{status=\"approved\"}[5m])",
            "legendFormat": "Approved"
          },
          {
            "expr": "increase(approval_requests_total{status=\"rejected\"}[5m])",
            "legendFormat": "Rejected"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Auto-Fix Outcomes",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(autofix_attempts_total) by (outcome)",
            "legendFormat": "{{outcome}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Processing Time by Operation",
        "type": "bargraph",
        "targets": [
          {
            "expr": "rate(autofix_processing_seconds_sum[5m]) / rate(autofix_processing_seconds_count[5m])",
            "legendFormat": "{{operation_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
